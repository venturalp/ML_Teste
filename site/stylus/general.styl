/****** Config Files *******/
@import 'reset'

use_reset('meyer')
reset('all')
/***************************/

/****** Components *********/
@import 'general/vars.styl'
@import 'general/functions.styl'

/***************************/

*, *::after, *::before      
	box-sizing border-box 	
	font-weight 300
	transition all 0.2s ease
	
html
	height 100%
	
body
	width 100%
	height 100%
	background-color #e7e7e7
	overflow-x hidden
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-family sans-serif
	
.content
	width $content
	margin 0 auto
	+below($content)
		width 95%

select::-ms-expand {
    display: none;
}

.ng-cloak
	display none !important

header
	background-color $mainColor
	&>div
		padding 20px 0px
		&>img, & form
			display inline-block
			vertical-align middle
		&>img
			margin-right 30px
		&>form
			width 80%
			& input
				border 0px
				height 35px
				padding 10px
				set-font-size(20px)
				display inline-block
				vertical-align top
				width 80%
			& button
				display inline-block
				vertical-align top
				appearance none
				background-image url('../images/search.png')
				background-repeat no-repeat
				background-position center
				height 35px
				width 40px
				border 0px
				background-color #f1f1f1
				
.carregando
	text-align center
	padding 10px
	
.sec-busca
	margin 40px auto	
	background-color #fff
	padding 35px 50px
	& article
		margin-bottom 10px
		&:last-child
			margin-bottom 0px
		&>div
			display table
			width 100%
			&>div
				position relative
				display table-cell
				vertical-align top
				&:first-child
					width 20%
					text-align center
					& img
						max-width 100%
				& h2
					font-weight bold
					set-font-size(14px)
					margin-bottom 20px
				& h3					
					set-font-size(16px)
		.ver-mais
			color #fff
			background-color $link
			text-decoration none
			border-radius 2px
			padding 4px 6px
			display inline-block
			float right
			top 0
			
						